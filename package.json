{
  "name": "pauls-redux-tools",
  "version": "0.1.28",
  "description": "Pauls Redux Tools",
  "main": "./dist/bundle.js",
  "dependencies": {
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.3",
    "tslint": "^5.7.0",
    "typescript": "^2.7.1"
  },
  "scripts": {
    "lint": "tslint -c tslint.json --project tsconfig.json 'src/**/*.ts' 'src/**/*.tsx'",
    "fixlint": "tslint --fix -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "build": "npm run lint && tsc -p .",
    "test": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
